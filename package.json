{
  "name": "@lindorm-io/koa-config",
  "description": "Configuration handler base for lindorm.io packages",
  "version": "0.0.2",
  "license": "ISC",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "repository": {
    "type": "git",
    "url": "git@github.com:lindorm-io/koa-config.git"
  },
  "bugs": {
    "url": "https://github.com/lindorm-io/koa-config/issues"
  },
  "author": "Jonn Nilsson",
  "maintainers": [
    "jonn@jonn.nu"
  ],
  "scripts": {
    "build": "tsc",
    "build:clean": "rimraf dist",
    "check:lint": "eslint --ext .ts ./src/",
    "check:lint:fix": "eslint --ext .ts ./src/ --fix",
    "check:types": "tsc -p tsconfig.json --noEmit",
    "check:types:watch": "tsc -p tsconfig.json --noEmit --watch",
    "postpublish": "rimraf dist",
    "postversion": "git push --no-verify && git push --tags --no-verify",
    "prepublishOnly": "npm run build:clean && npm run build",
    "preversion": "npm run validate",
    "publish:major": "npm version major && npm publish",
    "publish:minor": "npm version minor && npm publish",
    "publish:patch": "npm version patch && npm publish",
    "test": "npm run test:unit",
    "test:clear": "jest --clearCache",
    "test:coverage": "rimraf coverage && jest --coverage --forceExit",
    "test:unit": "jest --config jest.config.js --",
    "test:unit:watch": "jest --config jest.config.js --watch --",
    "test:update": "jest --updateSnapshot",
    "test:watch": "npm run test:unit:watch",
    "update": "ncu -u && npm install",
    "validate": "npm run test:clear && npm run check:lint && npm run check:types && npm test"
  },
  "devDependencies": {
    "@types/jest": "^26.0.23",
    "@types/node": "15.6.2",
    "@typescript-eslint/eslint-plugin": "^4.26.0",
    "@typescript-eslint/parser": "^4.26.0",
    "eslint": "^7.28.0",
    "husky": "^6.0.0",
    "jest": "^27.0.4",
    "jest-extended": "^0.11.5",
    "lint-staged": "^11.0.0",
    "mockdate": "^3.0.5",
    "prettier": "2.3.1",
    "rimraf": "^3.0.2",
    "ts-jest": "^27.0.2",
    "ts-node": "^10.0.0",
    "typescript": "^4.3.2"
  }
}
